<Window x:Class="HealthServiceManagementSystem.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthServiceManagementSystem"
        mc:Ignorable="d"
        WindowStyle="None"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Dashboard" Height="450" Width="850">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/clinic-bg-2.jpg" Stretch="UniformToFill" Opacity=".1"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Menu Name="mnuMainMenu" HorizontalAlignment="Stretch">
                <MenuItem Header="_Search">
                    <MenuItem Header="Search for...">
                        <TextBox Name="tbxSearchItem" Width="150" />
                        <Button Name="btnSearch" Content="Search" Height="26" Width="75" Margin="3,0" Background="Transparent" Foreground="#000"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_Reset" />
                </MenuItem>
                <MenuItem Header="_Admin" Margin="10,0" />
                <MenuItem Header="_Doctors"  Margin="10,0" />
                <MenuItem Header="_Nurses"  Margin="10,0" />
                <MenuItem Header="_Patients"  Margin="10,0" />
                <MenuItem Header="_On Duty"  Margin="10,0" />
                <MenuItem Header="_Application"  Margin="10,0">
                    <MenuItem Header="_Exit" />
                </MenuItem>    
            </Menu>
        </StackPanel>

        
